{
  "product": "hello",
  "company": "mh-cbon",
  "license": "LICENSE",
  "icon": "ico.ico",
  "info": {
    "comments": "some comments",
    "contact": "some contact",
    "help-link": "http://example.com/help",
    "support-telephone": "555-123456789",
    "support-link": "http://example.com/support",
    "update-info-link": "http://example.com/update",
    "readme": "[INSTALLDIR]readme.txt",
    "size": 123456
  },
  "upgrade-code": "",
  "files": [
    {
      "path": "build/amd64/hello.exe",
      "service": {
        "name": "HelloSvc",
        "start": "auto",
        "display-name": "Hello!",
        "description": "The hello service"
      }
    }
  ],
  "directories": [
    "some/assets"
  ],
  "env": {
    "guid": "",
    "vars": [
      {
        "name": "some",
        "value": "value",
        "permanent": "no",
        "system": "no",
        "action": "set",
        "part": "last"
      }
    ]
  },
  "registries": [
    {
      "path": "HKCU\\Software\\mh-cbon\\hello",
      "values": [
        {
          "name": "Version",
          "value": "[SOME_VERSION]"
        },
        {
          "name": "InstallDir",
          "value": "[INSTALLDIR]"
        }
      ]
    }
  ],
  "shortcuts": [
    {
      "name": "hello",
      "description": "hello web server",
      "target": "[INSTALLDIR]hello.exe",
      "wdir": "INSTALLDIR",
      "arguments": "",
      "icon": "ico.ico"
    }
  ],
  "choco": {
    "description": "hello program",
    "project-url": "https://github.com/mh-cbon/go-msi/tree/master/testing",
    "tags": "hello",
    "license-url": "https://github.com/mh-cbon/go-msi/blob/master/LICENSE"
  },
  "hooks": [
    {
      "command": "this will fail and be ignored",
      "when": "install",
      "return": "ignore"
    }
  ],
  "properties": [
    {
      "id": "CURRENTBUILD",
      "registry": {
        "path": "HKLM\\SOFTWARE\\Microsoft\\Windows NT\\CurrentVersion",
        "name": "CurrentBuild"
      }
    },
    {
      "id": "MINIMUMBUILD",
      "value": "99999"
    }
  ],
  "conditions": [
    {
      "condition": "Installed OR (CURRENTBUILD \u003c MINIMUMBUILD)",
      "message": "some condition message"
    }
  ]
}